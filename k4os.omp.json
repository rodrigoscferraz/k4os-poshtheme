{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "vertical_offset": 1,
      "horizontal_offset": 1,
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "powerline_symbol": "\uE0B0 ",
          "foreground": "#ffffff",
          "background": "#0476d0",
          "properties": {
            "prefix": " ",
            "windows": "\uF179 ",
            "postfix": "  "
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#0087d8",
          "properties": {
            "prefix": " @",
            "display_host": false,
            "postfix": " "
          }
        },
        // {
        //   "type": "aws",
        //   "style": "powerline",
        //   "powerline_symbol": "\uE0B0",
        //   "foreground": "#ffffff",
        //   "background": "#0095e9",
        //   "properties": {
        //     "prefix": "\uf662  ",
        //     "template": "{{.Profile}}{{if .Region}}@{{.Region}}{{end}}"
        //   }
        // },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#262b44",
          "background": "#feae34",
          "properties": {
            "prefix": " \uE5FF ",
            "style": "agnoster_short",
	    "max_depth": 2,
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "powerline",
	  "background": "#f07d0a",
	  "foreground": "#262b44",
          "powerline_symbol": "î‚°",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "status_colors_enabled": true,
            "display_status": true,
            "local_changes_color": "#f77622",
            "ahead_and_behind_color": "#e43b44",
            "behind_color": "#f77622",
            "ahead_color": "#2ce8f5",
            "stash_count_icon": " \uF692 "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "battery",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": " \uE0B2",
          "foreground": "#242424",
          "background": "#0095e9",
          "properties": {
            "battery_icon": "\uf583",
            "color_background": true,
            "charged_color": "#0476d0",
            "charging_color": "#5dde59",
            "discharging_color": "#FFCD58",
            "postfix": "\uF295 \uf583 ",
            "prefix": " "
          }
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B2",
          "foreground": "#ffffff",
          "background": "#0087d8",
          "properties": { 
            "prefix":  " ", 
            "template": "{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}",
            "postfix": " "
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B2",
          "foreground": "#003544",
          "background": "#0087D8",
          "properties": {
            "prefix": " \uE235 ",
            "display_version": false,
            "display_mode": "context",
            "display_virtual_env": true
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "\uE0B2",
          "foreground": "#ffffff",
          "background": "#0095e9",
          "properties": {
            "prefix": "<#ffffff> \uf64f </>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#FFD700",
          "properties": {
            "root_icon": "âš¡"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#f1184c",
          "properties": {
            "prefix": "",
            "text": "ðŸš€"
          }
        },
        {
          "foreground": "#00ff0d",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "template": "\u279C "
          },
          "style": "plain",
          "type": "exit"
        }
      ]
    }
  ]
}
